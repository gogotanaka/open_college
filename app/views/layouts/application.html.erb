<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title or "OpenCollege" %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller.controller_name %>">
    <header class="main_header">
      <div class="inside">
        <% if signed_in? %>
          <%= link_to "OpenCollege", user_path(current_user), class: "logo" %>
          <%= link_to "Settings", edit_user_path(current_user) %>
          <%= link_to "Sign out", signout_path, method: "delete" %>
        <% else %>
          <%= link_to "OpenCollege", root_path, class: "logo" %>
          <%= link_to "Sign in", signin_path, class: "btn header_signin" %>
          <%= link_to "Sign up", signup_path, class: "btn_primary header_signup" %>
        <% end %>
      </div>
    </header>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </body>
</html>

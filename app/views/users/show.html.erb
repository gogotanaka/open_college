<h1><%= @user.email %><br>
  <%= @user.last_name %><%= @user.first_name %><br>
  <%= @user.university.name %><%= @user.department.name %><%= @user.school_subject.name %><%= @user.school_year %>年</h1>

<% @user.class_rooms.each do |class_room| %>
  <%= class_room.class_room_for_year.name %>
  <%= class_room.class_room_for_year.teacher_name %>
  <%= class_room.year %>年
  <% if ClassGrade.find_by_class_room_id(class_room.id) %>
    <%= ClassGrade.find_by_class_room_id(class_room.id).grade %>
  <% end %><br>
<% end %>
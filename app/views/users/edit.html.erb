<div class="edit">
  <div class="mini_inside">
    <h2>Edit My Account</h2>
    <div class="form_container">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.submit "Save Profile", class: "btn" %>
      <% end %>
    </div>
  </div>
</div>
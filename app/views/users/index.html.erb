<%- model_class = User -%>
<div class="admin_info text_center">
  User Count: <%= User.count %>&nbsp;&nbsp;
  Complete Bookmark: <%= University.find(1).users.count %>&nbsp;&nbsp;
  Department Null: <%= User.where("department_id IS NULL").count %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "HTML", source_user_path(user), class: "btn btn_mini" %>
          <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }, class: "btn btn_mini" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
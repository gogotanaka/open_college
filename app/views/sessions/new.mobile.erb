<div class="m_auth_form">
  <%= form_for(:session, url: sessions_path) do |f| %>
    <div class="m_auth_form_header">
      <h2>Sign in</h2>
    </div>
    <div class="m_auth_form_body">
      <% flash.each do |key, value| %>
        <div class="m_message_box"><%= value %></div>
      <% end %>
      <div class="m_input_block">
        <div class="input_label">
          <%= f.label :email %>
        </div>
        <%= f.text_field :email, class: "input_wide" %>
      </div>
      <div class="m_input_block">
        <div class="input_label">
          <%= f.label :password %>
        </div>
        <%= f.password_field :password, class: "input_wide" %>
      </div>
      <%= f.submit "Sign in", class: "m_btn m_btn_large " %>
    </div>
  <% end %>
</div>
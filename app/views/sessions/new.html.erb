<div class="auth_form">
  <%= form_for(:session, url: sessions_path) do |f| %>
    <div class="auth_form_header">
      <h1>Sign in</h1>
    </div>
    <div class="auth_form_body">
      <% flash.each do |key, value| %>
        <div class="message_box"><%= value %></div>
      <% end %>
      <div class="input_block">
        <div class="input_label">
          <%= f.label :email %>
        </div>
        <%= f.text_field :email, class: "input_wide" %>
      </div>
      <div class="input_block">
        <div class="input_label">
          <%= f.label :password %>
        </div>
        <%= f.password_field :password, class: "input_wide" %>
      </div>
      <%= f.submit "Sign in", class: "btn btn_middle btn_large_radius" %>
      &nbsp;<%= link_to "forgotten password?", "" %>
    </div>
  <% end %>
</div>
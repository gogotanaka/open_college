<div class="m_guide_container">
  <ul class="m_guide_nav_container clearfix">
    <span class="step">STEP</span>
    <li>1</li>
    <span>></span>
    <li>2</li>
    <span>></span>
    <li class="m_active">3</li>
  </ul>
  <div class="m_guide_explain">
    <% if current_user.play == "進級" %>
      <h2 class="topic">
        <%= current_user.play %>おめでとう！
      </h2>
      <div class="m_rank_container">
        <h1>
          あなたの学業成績・総合
        </h1>
        <div class="m_rank">
          <div class="m_rank_header">
            <h2><%= current_user.university.name %>・<%= @user.university.users.count%>人</h2>
          </div>
          <div class="m_rank_body">
            <div class="m_user_rank_container clearfix">
              <div class="m_user_rank">
                1位
              </div>
              <div class="m_user_name">
                <%= current_user.last_name %> <%= current_user.first_name%>
              </div>
            </div>
            <div class="m_tententen clearfix">
              ・<br>・<br>・
            </div>
            <div class="m_current_user_rank clearfix">
              <div class="m_user_rank">
                <%= @rank_all_in_university %>位
              </div>
              <div class="m_user_name">
                <%= current_user.last_name %> <%= current_user.first_name%>
              </div>
            </div>
          </div>
        </div>
        <div>
          <%= @rank_all_in_department %>位
          <%= current_user.department.name %>・<%= @user.department.users.count%>人
        </div>
        <div>
          <%= @rank_all_in_school_subject %>位
          <%= current_user.school_subject.name %>・<%= @user.school_subject.users.count%>人
        </div>
      </div>
    <% elsif current_user.play == "原級" %>
    <% end %>
  </div>
</div>